{
  "name": "@lightelligence/styles",
  "version": "0.12.2",
  "description": "The UI-Framework of the lightelligence-platform.",
  "license": "MIT",
  "main": "dist/index.js",
  "style": "dist/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightelligence-io/styles.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "sass",
    "es7",
    "es2016",
    "lightelligence",
    "osram",
    "css framework",
    "ui framework",
    "ui kit"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf docs",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --mode=production",
    "start": "rm -rf docs && node scripts/start.js",
    "build:docs": "stylemark -i \"./src\" -o \"./docs\" && touch ./docs/.nojekyll",
    "lint": "stylelint \"src/**/*.scss\" && prettier --check \"{src,scripts}/**/*.js\"",
    "lint:fix": "stylelint --fix \"src/**/*.scss\" && prettier --write \"{src,scripts}/**/*.js\"",
    "license-report": "legally",
    "test": ""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "first-nested"
          ],
          "ignoreAtRules": [
            "else",
            "import"
          ]
        }
      ],
      "scss/at-else-empty-line-before": "never",
      "block-closing-brace-newline-after": [
        "always",
        {
          "ignoreAtRules": [
            "if",
            "else"
          ]
        }
      ],
      "at-rule-no-unknown": null,
      "selector-pseudo-element-colon-notation": null,
      "declaration-block-no-duplicate-properties": null,
      "no-descending-specificity": null,
      "font-family-no-missing-generic-family-keyword": null,
      "max-empty-lines": null,
      "function-calc-no-unspaced-operator": null,
      "no-duplicate-selectors": null,
      "declaration-block-no-shorthand-property-overrides": null,
      "block-no-empty": null
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "audit-ci": "^2.2.0",
    "autoprefixer": "^8.6.5",
    "babel-loader": "^8.0.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^4.0.1",
    "copy": "^0.3.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "css-vars": "^2.2.0",
    "cssnano": "^4.1.7",
    "es6-template-strings": "^2.0.1",
    "extract-loader": "^3.1.0",
    "fast-sass-loader": "^1.4.7",
    "file-loader": "^2.0.0",
    "glob": "^7.0.6",
    "highlight.js": "^9.13.1",
    "humps": "^2.0.1",
    "husky": "^2.2.0",
    "json5": "^2.1.0",
    "legally": "^3.3.7",
    "material-design-icons-iconfont": "^3.0.3",
    "node-run-cmd": "^1.0.1",
    "node-sass": "^4.12.0",
    "normalize.css": "^8.0.0",
    "postcss": "^7.0.6",
    "postcss-copy": "^7.1.0",
    "postcss-custom-media": "^7.0.7",
    "postcss-custom-properties": "^8.0.9",
    "postcss-easy-import": "^3.0.0",
    "postcss-export-custom-variables": "^1.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.4.1",
    "prettier": "1.17.1",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.0.1",
    "sass-svg": "^1.2.0",
    "sassdash": "^0.9.0",
    "sscreen": "0.0.3",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.6.1",
    "stylemark": "^3.1.3",
    "svg-url-loader": "^2.3.2",
    "typeface-overpass-mono": "0.0.54",
    "typeface-pt-sans": "0.0.54",
    "url-loader": "^1.1.2",
    "varss": "0.0.5",
    "watch": "^1.0.2",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "yargs": "^11.1.0"
  },
  "dependencies": {}
}
